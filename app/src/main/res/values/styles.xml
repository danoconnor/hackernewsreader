<resources>

    <!-- Base application theme. -->
    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:textColorPrimary">@color/colorPrimaryTextColor</item>
        <item name="android:windowLayoutInDisplayCutoutMode">never</item>
    </style>

    <style name="AppThemeDark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDark.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeDark.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LargeText" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColorPrimary">@color/colorPrimaryTextColor</item>
        <item name="android:textColor">@color/colorPrimaryTextColor</item>
    </style>

    <style name="MediumText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColorPrimary">@color/colorPrimaryTextColor</item>
        <item name="android:textColor">@color/colorPrimaryTextColor</item>
    </style>

    <style name="SmallText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColorPrimary">@color/colorPrimaryTextColor</item>
        <item name="android:textColor">@color/colorPrimaryTextColor</item>
    </style>

</resources>
